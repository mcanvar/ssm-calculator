{
  "manifest_version": 2,

  "name": "SSM Remaining time calculator",
  "description": "Chrome Extension, TypeScript, React, Cross-platform",
  "version": "1.0.0",

  "background": {
    "scripts": ["js/background.js"]
  },

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": ["https://screenshotmonitor.com/*", "storage", "tabs"]
}
