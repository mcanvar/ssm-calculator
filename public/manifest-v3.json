{
  "manifest_version": 3,

  "name": "SSM Remaining time calculator",
  "description": "Chrome Extension, TypeScript, React, Cross-platform",
  "version": "1.0.0",

  "background": {
    "service_worker": "js/background.js"
  },

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "tabs"]
}
